<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:background="#cccccc">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:hint="Card Number"
            />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/new_verse_title_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/new_verse_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="20sp"
            tools:text="Title:" />

        <EditText
            android:id="@+id/new_verse_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add a title..."
            tools:ignore="HardcodedText"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/new_verse_category_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/new_verse_category_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            tools:text="Category:" />

        <Spinner
            android:id="@+id/new_verse_category_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout">

        <TextView
            android:id="@+id/new_verse_add_tag_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:textSize="20sp"
            tools:text="Tags" />

        <RelativeLayout
            android:id="@+id/new_verse_add_tag_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/new_verse_add_tag_text">

            <!--Place all tags here-->
            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->
            <!---->
            <!--</LinearLayout>-->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/new_verse_add_tag_button_text"
                android:layout_alignStart="@+id/new_verse_add_tag_button_text"
                android:layout_alignRight="@+id/new_verse_add_tag_button_text"
                android:layout_alignEnd="@+id/new_verse_add_tag_button_text"
                android:src="@drawable/tag_background"
                android:tint="@color/colorBackground"
                tools:ignore="ContentDescription"/>

            <TextView
                android:id="@+id/new_verse_add_tag_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:maxLines="1"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="5dp"
                android:textSize="12sp"
                tools:text="+ tag" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
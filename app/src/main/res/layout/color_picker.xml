<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <com.larswerkman.lobsterpicker.LobsterPicker
        android:id="@+id/color_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:color_history_enabled="true"
        app:color_history_radius="48dp"
        app:color_wheel_thickness="12dp"/>

    <com.larswerkman.lobsterpicker.sliders.LobsterShadeSlider
        android:id="@+id/color_picker_slider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:color_slider_thickness="8dp"/>

    <FrameLayout
        android:id="@+id/test_background"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="#000">

        <TextView
            android:id="@+id/test_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/textColorLight"
            android:textSize="24sp"
            android:text="@string/app_name"/>

    </FrameLayout>

</LinearLayout>
